<div class="panel panel-default">
<div class="panel-heading">
  <i class="fa fa-caret-square-o-right fa-fw"></i> Stage (x: {{mouseX}}, y: {{mouseY}})
  <div class="pull-right">
    <div class="btn-group">
      <button id="play-btn" {{bind-attr disabled='isPlaying'}} {{action 'play'}} type="button" class="btn btn-xs btn-success">Play<i class="fa fa-play fa-fw"></i></button>
      <button id="stop-btn" {{bind-attr disabled='isStopped'}} {{action 'stop'}} type="button" class="btn btn-xs btn-danger">Stop<i class="fa fa-stop fa-fw"></i></button>
    </div>
  </div>
</div>
<!-- /.panel-heading -->
<div class="panel-body">
  <div id="stage-canvas" class="stage-canvas" width="470" height="320" {{bind-attr style=view.backgroundStyle}}>
  </div>
</div>
<!-- /.panel-body -->
</div>
<!-- /.panel -->